{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "gunicorn -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT --workers 2 --timeout 300 backend.main:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    "frontend": {
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile.frontend",
        "watchPaths": [
          "src/**",
          "public/**",
          "index.html",
          "package.json",
          "Dockerfile.frontend",
          "nginx.conf",
          "docker-entrypoint.sh"
        ]
      },
      "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30
      },
      "environmentVariables": {
        "VITE_API_BASE_URL": "${VITE_API_BASE_URL}",
        "VITE_STRIPE_PRICE_TIER_BASIC": "${VITE_STRIPE_PRICE_TIER_BASIC}",
        "VITE_STRIPE_PRICE_TIER_PRO": "${VITE_STRIPE_PRICE_TIER_PRO}",
        "VITE_STRIPE_PRICE_TIER_AGENCY": "${VITE_STRIPE_PRICE_TIER_AGENCY}",
        "VITE_FRONTEND_BASE_URL": "${VITE_FRONTEND_BASE_URL}",
        "PORT": "8080"
      }
    }
  },
  "_redeployTrigger": "2024-12-11-v3"
}
